<% if current_user == @user %>
    <h1>Welcome <%= @user.name.to_s %> on your dashboard</h1>
    <% if !current_user.if_coach %>
        <h3><p><%= current_user.name %></p></h3>
        <%= link_to "You are Coach?", active_coach_path %>
        <h4><p><%= link_to 'Here is your page with abilities', user_abilities_path(current_user) %></p></h4>
        <h4>It's this list of your actual coaches</h4>
        <% current_user.coaches.each do |coach| %>
            <p><%= link_to coach.name, '/users/' + coach.id.to_s %></p>
        <% end %>
    <% else %>
    <ul>
    
    <%= link_to "You aren't Coach?", no_longer_coach_path %>
    <li>Students' massenger</li>
    <li>Your students accounts</li>
                <% current_user.students.each do |student| %>
                <p><%= link_to student.name, '/users/' + student.id.to_s %></p>
                <p><%= link_to "Click to see this students' abilities", user_abilities_path(student) %></p>
                <% end %>
</ul>
    <% end %>
<% else %>
    <h2>It's <%= @user.name %> profile</h2>
    <% if current_user %>
        <h4>Click here to send a him message</h4>
    <% end %>
<% end %>